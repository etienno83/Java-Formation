package fr.adaming.test1;

public class Exo1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int x = 7;
		double somme = 1;
		for (int j = 1; j<=7; j++){
			double a = Math.pow(x,j);
			somme = somme + a*j;
		}
		System.out.println("La valeur est de : " + somme);
	}
	}


