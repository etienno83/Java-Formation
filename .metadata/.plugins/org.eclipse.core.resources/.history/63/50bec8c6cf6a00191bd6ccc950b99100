package fr.adaming.modeldes;

public class ModelDes {

	public static void main(String[] args) {

		int min = 1;
		int max = 6;
		int[] des1 = { 0, 0, 0, 0, 0, 0 };
		int[] des2 = { 0, 0, 0, 0, 0, 0 };
		int[] des3 = { 0, 0, 0, 0, 0, 0 };

		for (int i = 0; i < 6; i++) {
			int r = (int) (Math.random() * (max - min)) + min;
			des1[i] = r;
		}
		for (int i = 0; i < 6; i++) {
			int r = (int) (Math.random() * (max - min)) + min;
			des2[i] = r;
		}
		for (int i = 0; i < 6; i++) {
			int r = (int) (Math.random() * (max - min)) + min;
			des3[i] = r;
		}

		int[] DES[] = { des1, des2, des3 };
		
		for (int j = 1; j < 27; j++) {
			if (DES[j] == DES[j + 1]) {
				System.out.println("Bien joué!" + DES[0] + DES[1] + DES[2]);
			} else {
				System.out.println("C'est raté" + DES[0] + DES[1] + DES[2]);
			}
		}

	}

}
